<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView

        android:id="@+id/header_cover"
        android:layout_width="match_parent"
        android:layout_height="180dp"

        android:scaleType="centerCrop"
        android:src="@drawable/header3"
        android:transitionName="@string/transition_background"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

<!--  <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/details_image_gradient"
            app:layout_constraintBottom_toBottomOf="@+id/header_cover"
            app:layout_constraintLeft_toLeftOf="@+id/header_cover"
            app:layout_constraintRight_toRightOf="@+id/header_cover"
            app:layout_constraintTop_toTopOf="@+id/frameLayout" />-->

    <View
        android:id="@+id/card"
        android:layout_width="317dp"
        android:layout_height="280dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/white_corners"
        android:transitionName="@string/transition_card"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_cover"
        app:layout_constraintVertical_bias="1.0" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="90dp"
        android:layout_height="90dp"
android:layout_marginTop="70dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/avatar_border_details"
        android:transitionName="@string/transition_avatar_border"
        app:layout_constraintBottom_toTopOf="@+id/card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="76dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/details_avatar_border"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:ellipsize="end"
        android:enabled="false"
        android:gravity="center"
        android:maxLines="1"
        android:text="Customer Name"
        android:textColor="@color/white"
        android:textSize="24sp"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/card"
        app:layout_constraintRight_toRightOf="@+id/card"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />
    <LinearLayout
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/card"
        app:layout_constraintRight_toRightOf="@+id/card"
        app:layout_constraintTop_toBottomOf="@+id/name_text_view"
        android:layout_marginTop="5dp"

        >
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginLeft="30dp"
        app:srcCompat="@drawable/ic_phone_android_black_24dp"

        app:layout_constraintLeft_toLeftOf="@+id/card"
        app:layout_constraintRight_toRightOf="@+id/card"
        app:layout_constraintTop_toBottomOf="@+id/name_text_view" />
        <TextView
            android:id="@+id/agender_text_view1"
            android:layout_width="0dp"
            android:layout_height="30dp"
android:layout_weight=".4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"

            android:ellipsize="end"


            android:maxLines="1"
            android:text="Mobile No"
            android:textColor="@color/white"
            android:textSize="17sp"

            app:layout_constraintLeft_toLeftOf="@+id/card"
            app:layout_constraintRight_toRightOf="@+id/card"
            app:layout_constraintTop_toBottomOf="@+id/name_text_view" />
    <TextView
        android:id="@+id/agender_text_view"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight=".7"

        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"

        android:ellipsize="end"


        android:maxLines="1"
        android:text="9890683224"
        android:textColor="@color/white"
        android:textSize="17sp"

        app:layout_constraintLeft_toLeftOf="@+id/card"
        app:layout_constraintRight_toRightOf="@+id/card"
        app:layout_constraintTop_toBottomOf="@+id/name_text_view" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/card"
        app:layout_constraintRight_toRightOf="@+id/card"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        android:layout_marginTop="5dp"


        >

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="@+id/card"

            app:layout_constraintRight_toRightOf="@+id/card"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/ic_home_black_24dp" />
        <TextView
            android:id="@+id/agender_text_view3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"

            android:ellipsize="end"


            android:maxLines="1"
            android:text="Address"
            android:textColor="@color/white"
            android:textSize="17sp"

            app:layout_constraintLeft_toLeftOf="@+id/card"
            app:layout_constraintRight_toRightOf="@+id/card"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />
    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="0dp"
        android:layout_weight=".7"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:ellipsize="end"

        android:maxLines="4"
        android:text="309,Surtwala mark plazzo , Hinjewadi-wakad "
        android:textColor="@color/white"
        android:textSize="16sp"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/card"
        app:layout_constraintRight_toRightOf="@+id/card"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_loan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/card"
        app:layout_constraintRight_toRightOf="@+id/card"
        app:layout_constraintTop_toBottomOf="@+id/layout_address"
        android:layout_marginTop="5dp"


        >
    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginLeft="30dp"
        app:srcCompat="@drawable/ic_account_balance_black_24dp"
        app:layout_constraintLeft_toLeftOf="@+id/card"
        app:layout_constraintRight_toRightOf="@+id/card"
        app:layout_constraintTop_toBottomOf="@+id/layout_address"
        />
        <TextView
            android:id="@+id/mobile_text_view5"
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:ellipsize="end"

            android:maxLines="2"
            android:text="Total Loan"
            android:textColor="@color/white"
            android:textSize="14sp"

            app:layout_constraintLeft_toLeftOf="@+id/card"
            app:layout_constraintRight_toRightOf="@+id/card"
            app:layout_constraintTop_toBottomOf="@+id/layout_address" />
    <TextView
        android:id="@+id/mobile_text_view"
        android:layout_width="0dp"
        android:layout_weight=".7"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="26dp"


        android:ellipsize="end"

        android:maxLines="2"
        android:text=" Rs 20,112"
        android:textColor="@color/white"
        android:textSize="14sp"

        app:layout_constraintLeft_toLeftOf="@+id/card"
        app:layout_constraintRight_toRightOf="@+id/card"
        app:layout_constraintTop_toBottomOf="@+id/layout_address" />

    </LinearLayout>
    <Button
        android:id="@+id/update_profile_button"
        android:layout_width="317dp"
        android:layout_height="59dp"
        android:background="@color/colorPrimary"
        android:text="Update Profile"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/card"
        app:layout_constraintEnd_toEndOf="@+id/card"
        app:layout_constraintStart_toStartOf="@+id/card" />






