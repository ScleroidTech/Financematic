<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:orientation="vertical"
        android:padding="10dp"
       >
        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:elevation="4dp"
                android:padding="15dp">
                <TextView
                    android:id="@+id/cardview_list_title10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Person Name 1"
                    android:textSize="26sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/total_amount_title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview_list_title10"
                    android:layout_marginTop="15dp"
                    android:text="Due Date 4/6/2018"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/received_amount_title_text_view"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/cardview_list_title10"
                    android:layout_marginTop="15dp"
                    android:text="EMI amout 2000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/cardview_image12"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" app:srcCompat="@drawable/ic_person_black_24dp"


                    />


            </RelativeLayout>



        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:elevation="4dp"
                android:padding="15dp">
                <TextView
                    android:id="@+id/cardview_list_title14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Person Name 2"
                    android:textSize="26sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/cardview_list_title12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview_list_title14"
                    android:layout_marginTop="15dp"
                    android:text="Due Date 4/6/2018"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/cardview_list_title13"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/cardview_list_title14"
                    android:layout_marginTop="15dp"
                    android:text="EMI amout 2000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/cardview_image123"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" app:srcCompat="@drawable/ic_person_black_24dp"


                    />


            </RelativeLayout>



        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

