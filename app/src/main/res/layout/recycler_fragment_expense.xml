<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <include
                android:id="@+id/include2"
                layout="@layout/date_layout_expense"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.428" />

            <ImageView
                android:id="@+id/expense_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="8dp"

                android:background="@drawable/ic_home_black_24dp"
                android:backgroundTint="@color/exp_card1"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.486"
                card_view:layout_constraintStart_toEndOf="@+id/summery_amount"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.28" />


            <TextView
                android:id="@+id/expense_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Room Rent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/gray_text"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.419"
                card_view:layout_constraintStart_toEndOf="@+id/summery_amount"
                card_view:layout_constraintTop_toBottomOf="@+id/expense_image"
                card_view:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/expense_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/amount_with_symbol"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/include2"
                card_view:layout_constraintTop_toTopOf="parent" />


            <!--        <Button
                android:id="@+id/Btn_paid_rx_summery"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_rounded_green"
                android:text="Paid"
                android:textColor="@color/white"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />-->

        </android.support.constraint.ConstraintLayout>
        <!--
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c4bebe" />-->
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
